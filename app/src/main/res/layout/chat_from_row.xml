<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/linearLayout"
                                                   android:layout_marginBottom="12dp">
    <TextView
            android:layout_width="244dp"
            android:layout_height="84dp"
            android:id="@+id/textview_from"
            android:background="@mipmap/torectangle"
            android:padding="16dp"
            android:maxWidth="240dp"
            android:textColor="@android:color/white"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed auctor mi turpis, ac mollis tortor pellentesque ut"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/from_profile_imageview_chat"
            app:layout_constraintEnd_toStartOf="@+id/from_profile_imageview_chat"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/black"
            app:srcCompat="@android:drawable/ic_delete"
            android:id="@+id/from_profile_imageview_chat"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>